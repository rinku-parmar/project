    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </a>

  <!-- Pools -->
  <a href="<%= selectedCategory === 'pools' ? '/listings' : '/listings?category=pools' %>"
     class="filters <%= selectedCategory === 'pools' ? 'active' : '' %>">
