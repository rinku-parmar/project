  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filters {
      text-align: center;
      margin: 1.2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }

    .filters:hover {
      opacity: 1;
      cursor: pointer;
      color: black;
    }

    .filters p {
      font-size: 0.7rem;
    }

    .filters.active {
      opacity: 1;
      border-bottom: 2px solid black;
    }

    #filters a {
      text-decoration: none;
      /* remove underline */
      color: black;
      /* remove blue color */
    }

    .tax-info {
      display: none;
      /*non visible no space  */
    }

    .tax-toogle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin-left: 2rem;
      display: flex;
      align-items: center;
    }
  </style>

  <div id="filters">

    <!-- Trending -->
    <a href="<%= selectedCategory === 'trending' ? '/listings' : '/listings?category=trending' %>"
      class="filters <%= selectedCategory === 'trending' ? 'active' : '' %>">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>

    <!-- Rooms -->
    <a href="<%= selectedCategory === 'rooms' ? '/listings' : '/listings?category=rooms' %>"
      class="filters <%= selectedCategory === 'rooms' ? 'active' : '' %>">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>

    <!-- Iconic Cities -->
    <a href="<%= selectedCategory === 'iconic_cities' ? '/listings' : '/listings?category=iconic_cities' %>"
      class="filters <%= selectedCategory === 'iconic_cities' ? 'active' : '' %>">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </a>

    <!-- Mountains -->
    <a href="<%= selectedCategory === 'mountains' ? '/listings' : '/listings?category=mountains' %>"
      class="filters <%= selectedCategory === 'mountains' ? 'active' : '' %>">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </a>

    <!-- Castles -->
    <a href="<%= selectedCategory === 'castles' ? '/listings' : '/listings?category=castles' %>"
      class="filters <%= selectedCategory === 'castles' ? 'active' : '' %>">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </a>

    <!-- Pools -->
    <a href="<%= selectedCategory === 'pools' ? '/listings' : '/listings?category=pools' %>"
      class="filters <%= selectedCategory === 'pools' ? 'active' : '' %>">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>

    <!-- Camping -->
    <a href="<%= selectedCategory === 'camping' ? '/listings' : '/listings?category=camping' %>"
      class="filters <%= selectedCategory === 'camping' ? 'active' : '' %>">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>

    <!-- Farms -->
    <a href="<%= selectedCategory === 'farms' ? '/listings' : '/listings?category=farms' %>"
      class="filters <%= selectedCategory === 'farms' ? 'active' : '' %>">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </a>

    <!-- Arctic -->
    <a href="<%= selectedCategory === 'arctic' ? '/listings' : '/listings?category=arctic' %>"
      class="filters <%= selectedCategory === 'arctic' ? 'active' : '' %>">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </a>

    <a href="<%= selectedCategory === 'dome' ? '/listings' : '/listings?category=dome' %>"
      class="filters <%= selectedCategory === 'dome' ? 'active' : '' %>">
      <div><i class="fa-solid fa-igloo"></i></i></div>
      <p>Dome</p>
    </a>

    <a href="<%= selectedCategory === 'boats' ? '/listings' : '/listings?category=boats' %>"
      class="filters <%= selectedCategory === 'boats' ? 'active' : '' %>">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </a>


    <div class="tax-toogle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">display total after taxes</label>
      </div>
    </div>

  </div>




  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
      <a href="/listings/<%=listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;" />
          <div class="card-img-overlay">
            <!-- abc -->
          </div>


          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listing.title %>
              </b><br>
              &#8377; <%= listing.price.toLocaleString("en-IN"); %> / night
                <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </div>
      </a>

      <% } %>
  </div>





  <!-- <ul> -->
  <!-- for(let listing of allListings){ %>  -->
  <!-- <li><a href="/listings/ listing._id %>">listing.title a></li>  -->
  <!-- }  -->
  <!-- // </ul>  -->

  <script>
    let taxSwitch = document.getElementById('switchCheckDefault');
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      // console.log(taxInfo);
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }

    })
  </script>