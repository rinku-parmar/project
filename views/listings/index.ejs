    <style>
          #filters{
            display: flex;
            flex-wrap: wrap;
          }
          .filters{
            text-align: center;
            margin: 2rem;
            margin-top: 2rem;
            opacity: 0.8;
          }
            .filters:hover{
                opacity: 1;
                cursor: pointer;
                color: black;      
            }
            .filters p {
                font-size: 0.8rem;
            }
            .filters.active {
               opacity: 1;
                border-bottom: 2px solid black;
             }
             #filters a {
              text-decoration: none;   /* remove underline */
               color: black;            /* remove blue color */
              }

    </style>
   
      <div id="filters">

  <!-- Trending -->
  <a href="<%= selectedCategory === 'trending' ? '/listings' : '/listings?category=trending' %>"
     class="filters <%= selectedCategory === 'trending' ? 'active' : '' %>">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>

